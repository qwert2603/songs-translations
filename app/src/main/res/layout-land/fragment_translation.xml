<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView android:id="@+id/song_title_eng"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/SongTitle"/>

            <TextView android:id="@+id/song_author_eng"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/SongAuthor"/>

            <TextView android:id="@+id/song_text_eng"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/SongText"/>

        </LinearLayout>

        <LinearLayout android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView android:id="@+id/song_title_rus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/SongTitle"/>

            <TextView android:id="@+id/song_author_rus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/SongAuthor"/>

            <TextView android:id="@+id/song_text_rus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/SongText"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>